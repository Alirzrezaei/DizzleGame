package logic;

/**
 * This class is used by board class to store points of the game which are collected 
 * by player into a array of Score object and then show them on gui window. 
 * @author Alireza
 */
public class Scores {
    private int point;
    private ObjectTypes type;
    /**
     * Main constructor to store point and type of an object
     * @param point
     * @param type 
     */
    Scores(int point, ObjectTypes type){
        this.point = point;
        this.type = type;
    }
    /**
     * This method is returning the point of this object
     * @return int point
     */
    public int getPoint() {
        return point;
    }
    /**
     * this method is return type of this object
     * @return ObjectTypes type of object
     */
    public ObjectTypes getType() {
        return type;
    }
    /**
     * this method is setting the point for this object
     * @param point int point
     */
    public void setPoint(int point) {
        this.point = point;
    }
    /**
     * this method is setting the type of this object
     * @param type ObjectTypes type of object
     */
    public void setType(ObjectTypes type) {
        this.type = type;
    }
    
    
}
